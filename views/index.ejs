        <main class="index-main">
          <div class="products-container">
            <h2 class="index-title">OFERTAS DA SEMANA</h2>
            <div class="products-wrapper">
              <% for(let product of products){ %>
                <div class="products-box">
                  <img class="products-img" src="<%= product['images.Imagem'] %>" alt="<%= product.Nome%>" />
                  <div class="products-box-data">
                    <%= product.Nome %>
                  </div>
                  <div class="products-old-price">R$ <%= product.Preco %>
                  </div>
                  <div class="products-price">R$ <%= product.PrecoComDesconto %>
                  </div>
                  <button class="btn-detail"><a href="/products/<%= product.idProdutos %>"
                      class="link-button">Ver mais</a></button>
                </div>
                <% } %>
            </div>
          </div>
          </div>
