<%- include('partials/head') %>
<!-- Include Header -->
<%- include('partials/header', {title: 'Início' }) %>
<!-- Include Banner -->
<%- include('partials/slide') %>

<main class="main-payment">
<link rel="stylesheet" href="../stylesheets/cartPayment.css" />

<h3 class="payment_title">Pagamento</h3>

<% if(!loggedUser) { %>
<a id="linkEntrar" href="/users">Faça login ou cadastre-se</a>
<% } else { %>

  <div>

    <div class="ls-payment-content">
      <% if(productsIntoCart.length > 0){ %>
      <div>
        <% for(p of productsIntoCart) {%>
        <div>
          <div class="product-img">
            <img src="<%= p['images.Imagem'] %>" alt="" />
          </div>
          <div><%= p.Nome %></div>

          <div>R$ <%= p.Preco %></div>

          <div class="cart-btn-label">
            <form action="/orders/updateCart?_method=PUT" method="POST">
              <label for="quantity">Quantidade:</label>
              <input
                type="hidden"
                id="id"
                name="productId"
                value="<%=p.idProdutos %>"
              />
              <input
                type="number"
                id="quantidade"
                name="productQty"
                value="<%= p.quantidade %>"
                min="1"
                max="99"
              />
              <input type="submit" value="Adicionar" />
            </form>
          </div>
        </div>
        <% } %>
    </div>

    <div class="ls-about-your-order">
      <h5>resumo do pedido</h5>

      <img src="" alt="" />
      <p>Subtotal: R$ <%= total%></p>
      <p>Frete: Grátis!</p>

      <form action="/orders/release" method="POST">
        <label
          >Forma de Pagamento:

              <img src="" alt="" />
              <p>Subtotal: R$ <%= total %></p>
              <p>Frete: Grátis! </p>

              <form action="/orders/release" method="POST">
                <label>Forma de Pagamento:

                  <select name="payment" id="payment">
                    <option selected disabled>Selecione a forma de pagamento</option>
                    <option value="Pix">PIX</option>
                    <option value="cartao">Cartão de Crédito</option>
                    <option value="boleto">Boleto Bancario</option>
                  </select>

                </label><br>

                <label for="address_id">Selecione o endereço de entrega</label>
                <select name="address_id" id="address_id">

                  <option selected disabled>Selecione um Endereço</option>
                  <% for( a of addressesUser ) {%>
                    <option value="<%= a.Endereco%>"><%= a.Endereco %></option>
                    <% } %>
                </select> <br>

                
                <label for="endereco">Cadastrar novo endereço</label>
                <input type="text" id="endereco" name="endereco" placeholder="Digite novo endereço">
                <input type="text" id="cidade" name="cidade" placeholder="Cidade">
                <input type="text" id="estado" name="estado" placeholder="Estado">
                
                <p>Total a pagar: R$ <%= total %> <br>

                <button class="ls-btn-primary" type="submit">Finalizar Compra</button>
                
                </p>
              </form>
              

            </div>


            <% } else { %>
              Nenhum produto no carrinho
              <% } %>

                </div>
          </main>

        <label for="address_id">Selecione o endereço de entrega</label>
        <select name="address_id" id="">
          <% for( a of addressesUser ) {%>
          <option value="<%= a.Endereco%>"><%= a.Endereco %></option>
          <% } %>
        </select>
        <br />

        <p>Total a pagar: R$ <%= total%></p>

        <label for="endereco">Cadastrar novo endereço</label>
        <input
          type="text"
          id="endereco"
          name="endereco"
          placeholder="Digite novo endereço"
        />
        <input type="text" id="cidade" name="cidade" placeholder="Cidade" />
        <input type="text" id="estado" name="estado" placeholder="Estado" />

        <button class="ls-btn-primary" type="submit">Finalizar Compra</button>
      </form>
    </div>

    <% } else { %> Nenhum produto no carrinho <% } %>
  </div>
  <% } %> 
</main>

<%- include('partials/footer') %>