<%- include('partials/head') %>
<!-- Include Header -->
<%- include('partials/header', {title: 'Início' }) %>
<!-- Include Banner -->

<main>
  <link rel="stylesheet" href="../stylesheets/adminSignUp.css" />
  <br />
  <h2 class="index_title">Cadastrar Administrador</h2>

  <div class="register_admin_account">
    <form
      class="admin_register"
      method="post"
      action="/admin/create"
    >
      <div class="input_admin_container">
        <label for="nameAdmin">Nome</label>
        <input
          class="admin_name"
          type="text"
          name="nameAdmin"
          id="name_admin_register"
          value="<%= locals.oldAdminData ? oldAdminData.nameAdmin : null %>"
          placeholder="Digite seu nome"
        />
        <% if(locals.errors && errors.nameAdmin) {%>
        <div class="danger"><%= errors.nameAdmin.msg %></div>
        <% } %>

        <label for="emailAdmin">Email</label>
        <input
          class="admin_name"
          type="text"
          name="emailAdmin"
          id="input_admin_email"
          value="<%= locals.oldAdminData ? oldAdminData.emailAdmin : null %>"
          placeholder="digite seu email"
        />
        <% if(locals.errors && errors.emailAdmin) {%>
        <div class="danger"><%= errors.emailAdmin.msg %></div>
        <% } %>
        <label for="workerAdmin">Identidade Funcional</label>
        <input
          class="admin_name"
          type="text"
          name="workerAdmin"
          id="input_admin_worker"
          value="<%= locals.oldAdminData ? oldAdminData.workerAdmin : null %>"
          placeholder="digite seu email"
        />
        <% if(locals.errors && errors.workerAdmin) {%>
        <div class="danger"><%= errors.workerAdmin.msg %></div>
        <% } %>

        <label for="passwordAdmin">Senha</label>
        <input
          class="admin_name"
          type="password"
          name="passwordAdmin"
          id="input_admin_password"
          placeholder="digite uma senha"
        />
        <% if(locals.errors && errors.passwordAdmin) {%>
        <div class="danger"><%= errors.passwordAdmin.msg %></div>
        <% } %>

        <br />
        <button class="btn_registration" type="submit">Cadastrar-se</button>
        <br />
        <a href="/admin/login">Ou faça login</a>
      </div>
    </form>
  </div>
</main>

<%- include('partials/footer') %>
