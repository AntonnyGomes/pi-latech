<%- include('partials/head') %>
<!-- Include Header -->
<%- include('partials/header', {title: 'Início' }) %>



<main class="user-container">

  <link rel="stylesheet" href="../stylesheets/userAccount.css" />
  <br>
<h2 class="index_title">Minha Conta</h2>
<br>
<div class="account-container">
  <div class="user-menu">
    <button class="btn-user-purchase-order" id="btn-user-purchaise">Meus pedidos</button>
    <button class="btn-user-data" id="btn-user-data">Meus dados</button>
  </div>
  <div class="order-container">
    <br>
    <h3>Meus Pedidos</h3>
    <br>
    <div class="order-list">
      <p>Pedido:</p>
      <br>
      <p>Status:</p>
    </div>
    <br>
    <h3>Minhas Compras</h3>
    <br>
    <div class="ordered-products-container">
      <div class="list-of-products">
        <div class="ordered-product">
          <img src="/img/celular.png" alt="" />
          <div class="order-info">
            <p>Produto:</p>
            <br>
            <p>Preço:</p>
            <br>
            <p>Quantidade:</p>
            <br> 
            <p>Subtotal:</p>
            <br>
          </div>
        </div>
      </div>
      <div class="total-of-products">
        <p>Valor do Frete:</p>
        <br>
        <p>Total do Pedido:</p>
        <br>
      </div>
    </div>
  </div>
  <div class="user-info-container">
    
    <h3 class="greeting">Olá, <%= userLogged.Nome %></h3>

    <ul class="avatar">
      <li><img class="img-avatar" src="<%= userLogged.Avatar %> "></li>
      </ul>

      <ul class="user-info">
      <li>Nome do usuário: <%= userLogged.Nome %> </li> <br>
      <li>Sobrenome do usuário: <%= userLogged.Sobrenome %></li> <br>
      <li>E-mail: <%= userLogged.Email %></li> <br>
      <li>Cpf: <%= userLogged.Cpf %></li> <br>
      <li>Telefone: <%= userLogged.Telefone%></li> <br>
    </ul>
      
        
        <form action="/users/accountUpdate/<%= userLogged.idUser %>">
        <button class="btn-update" type="submit">Editar</button>
      </form>

      <form method="post" action="/users/delete/<%= userLogged.idUser %>">
        <button class="btn-update" type="submit">Excluir</button>
      </form>

    

  </div>
</main>

<!-- Include Footer -->
<%- include('partials/footer') %>